# LLM Provider Configuration
# Choose between 'openai' or 'together'
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Together.ai Configuration
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=meta-llama/Llama-3.3-70B-Instruct-Turbo-Free

# SSL Configuration (for corporate environments with certificate issues)
SSL_VERIFY=true

# Service Configuration
SERVICE_NAME=analysis-engine
SERVICE_PORT=8003
LOG_LEVEL=INFO

# Database Configuration
DATABASE_JSON_PATH=../shared/database.json

# PDF Report Configuration
SAVE_REPORTS_LOCALLY=true
REPORTS_DIRECTORY=./reports

# Data Collection Configuration  
DATA_COLLECTION_PATH=../data-collection/data/collected_data

# External Services
DATA_SERVICE_URL=http://localhost:8002
BRAND_SERVICE_URL=http://localhost:8001

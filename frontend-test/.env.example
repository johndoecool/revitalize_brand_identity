# Example environment configuration for Playwright tests

# Base URL for the application
BASE_URL=http://localhost:8080

# Test execution settings
HEADED=false
SLOWMO=0
TIMEOUT=30000

# Browser settings
BROWSER=chromium
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Test reporting
REPORT_DIR=playwright-report
SCREENSHOTS_DIR=test-results/screenshots

# CI settings
CI=false
RETRIES=0
WORKERS=1